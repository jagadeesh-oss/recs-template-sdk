<div class='unbxd-vertical-recs-slider'>
    <div class='recs-vertical-slider-heading' id='recs-vertical-slider-heading'>{{=it.heading}}</div>
    <div class='recs-vertical-button-container'>
        <button class='recs-vertical-slider-btn rex-vertical-slider--top' onclick='recsSliderScrollTop(event)'></button>
        <button class='recs-vertical-slider-btn rex-vertical-slider--bottom' onclick='recsSliderScrollBottom(event)'></button>
    </div>
    <div class='recs-vertical-slider-container' id='recs-vertical-slider-container'>
      
        <div class='recs-vertical-slider' id='recs-vertical-slider'> 
            {{~it.recommendations :value:index}}
                <div class='recs-vertical-list'>
                       {{ for(var prop in value) { }}

                        <div class='recs-vertical-slider__item'>
                            <img src='{{=value[prop].imageUrl || value[prop].imageUrl[0]}}' />
                        </div> 
                       {{ } }}
                       
                </div>
            {{~}}
        </div>
    </div>
</div>
